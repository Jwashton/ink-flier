{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    // also set in strictest config, but explicit here for esbuild
    "isolatedModules": true,
    "target": "es2023",
    "module": "nodenext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "js/**/*.mts",
    "types/shader.d.glsl.ts",
    "test/**/*.mts"
  ]
}
